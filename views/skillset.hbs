<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <title>Skillset</title>
  </head>
  <body>
    <div class="container d-flex justify-content-center">
      <div class="card mt-5 w-100 shadow-lg p-3 mb-5 rounded">
        <div class="card-header text-center bg-primary text-white rounded-5">
          <h3>Skillset - <b>{{email}}</b></h3>
        </div>
        <div class="container d-flex justify-content-center w-25 my-2">
          {{#if message}}
            <h4 class="alert {{color}} mt-3">{{message}}</h4>
          {{/if}}
        </div>
        {{#if skillsets}}
          <div class="card-body">
            <div>
              {{#each skillsets}}
                <div class="my-3">
                  <h5 class="card-text"><b>{{this.title}}</b>
                    -
                    {{this.level}}</h5>
                  <div class="progress">
                    <div
                      class="progress-bar bg-info progress-bar-striped progress-bar-animated"
                      role="progressbar"
                      style="width: {{this.level_percentage}}%;"
                      aria-valuenow="{{this.level_percentage}}"
                      aria-valuemin="0"
                      aria-valuemax="100"
                    ></div>
                  </div>
                </div>
              {{/each}}
            </div>
            <div class="text-end">
              <a href="/auth/gobacklistaccounts" class="btn btn-secondary">Go
                back</a>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>